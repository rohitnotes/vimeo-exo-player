<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <com.google.android.exoplayer2.ui.PlayerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        app:show_timeout="2000"
        android:animateLayoutChanges="true"
        android:animationCache="true"
        android:stateListAnimator="@android:transition/move"
        app:controller_layout_id="@layout/exo_player_ui"
        android:id="@+id/player_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="High Quality"
            android:background="#3333"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:id="@+id/buttonChangeQuality"
            />

        <Button
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Normal Quality"
            android:background="#3333"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:id="@+id/buttonChangeQuality3"
            />

        <Button
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Low Quality"
            android:background="#3333"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:id="@+id/buttonChangeQuality2"
            />

    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loader"
        android:layout_gravity="center"/>

</FrameLayout>